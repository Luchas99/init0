// Main Sidebar start
aside.main-sidebar.pinned
  .brand
    a.logo(href='index.html')
      i.ti-underline
      h2 MEGA
        span app
    a.sidebar-toggle.visible-xs-block(href='javascript:;', role='button')
      i.ti-close.text-white
  .profile
    img.avatar.img-circle(src=build+'images/users/04.jpg', alt='')
    span.status.bg-success
    h5.text-white.mb-5 Matthew Gonzalez
    .text-muted Designer
  // Nav tabs
  ul.nav.nav-tabs.nav-justified.nav-sidebar(role='tablist')
    li.active(role='presentation')
      a(href='#menu', aria-controls='menu', role='tab', data-toggle='tab')
        i.ti-menu
    li(role='presentation')
      a(href='#portfolio', aria-controls='portfolio', role='tab', data-toggle='tab')
        i.ti-user
    li.bubble(role='presentation')
      a(href='#email', aria-controls='email', role='tab', data-toggle='tab')
        i.ti-email
          span.dot.bg-danger
    li(role='presentation')
      a(href='#setting', aria-controls='setting', role='tab', data-toggle='tab')
        i.ti-server
  // Tab panes
  .tab-content.nav-sidebar-content
    #menu.tab-pane.fade.in.active(role='tabpanel')
      block navigation
      .header Server Status
      ul.list-unstyled.pl-15.pr-15
        li.mb-20
          .block.clearfix.mb-10
            span.pull-left.fs-12.text-muted CPU Used
            span.pull-right.label.label-outline.label-warning 65%
          .progress.progress-xs.mb-0
            .progress-bar.progress-bar-warning(role='progressbar', data-transitiongoal='65')
        li.mb-20
          .block.clearfix.mb-10
            span.pull-left.fs-12.text-muted Bandwidth
            span.pull-right.label.label-outline.label-danger 80%
          .progress.progress-xs.mb-0
            .progress-bar.progress-bar-danger(role='progressbar', data-transitiongoal='80')
    #portfolio.tab-pane.fade(role='tabpanel')
      .header Rating
      .rating.clearfix
        .pull-left.score.bg-black.fs-24.fw-600.text-center 4.2
        .pull-left
          .progress
            .progress-bar.five-star(role='progressbar', data-transitiongoal='100')
          .progress
            .progress-bar.four-star(role='progressbar', data-transitiongoal='80')
          .progress
            .progress-bar.three-star(role='progressbar', data-transitiongoal='10')
          .progress
            .progress-bar.two-star(role='progressbar', data-transitiongoal='25')
          .progress
            .progress-bar.one-star(role='progressbar', data-transitiongoal='5')
      p.text-center.fs-12.mt-5.mb-0 average based on 1,056 ratings
